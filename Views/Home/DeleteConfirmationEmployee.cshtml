@model Employee
@{
    ViewData["Title"] = "Employee Deleted Successfully.";
}
<div class="container mt-3">
    <div class="alert alert-dark" role="alert">
        <h2>Employee details Deleted successfully.</h2>
        <hr>
        <table class="table mt-2 table-hover table-bordered ">
            <thead class="thead-primary">
                <tr>
                    <th scope="col">Id</th>
                    <th scope="col">Name</th>
                    <th scope="col">Email</th>
                    <th scope="col">Department</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row">@Model.Id</th>
                    <td>@Model.Name</td>
                    <td>@Model.Email</td>
                    <td>@Model.Department</td>
                </tr>
            </tbody>
        </table>
        <a asp-controller="home" asp-action="index" class="btn btn-outline-success mt-3" style="width: auto;">Click here to
            navigate to the home page</a>
    </div>
</div>