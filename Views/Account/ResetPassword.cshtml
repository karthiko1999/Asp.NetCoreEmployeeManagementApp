@model ResetPasswordViewModel
@{
    ViewData["Title"] = "Password Reseting..";
}
<div class="container mt-3">
    <form method="post" asp-action="ResetPassword" asp-controller="Account">
        <div class="form-group row mt-1">
                 <div  asp-validation-summary="All" class="text-danger"></div>
        </div>
        <input asp-for="Email" hidden>
        <input asp-for="Token" hidden>
        <div class="form-group row mt-3">
                <label asp-for="Password" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="Password" class="form-control" placeholder="Please Enter New Password">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
        </div>
        <div class="form-group row mt-3">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm New Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
        </div>
        <div class="form-group row mt-3">
             <div class="col-sm-10">
                    <button type="submit" class="btn btn-success w-auto">Reset</button>
             </div>
         </div>
    </form>
</div>