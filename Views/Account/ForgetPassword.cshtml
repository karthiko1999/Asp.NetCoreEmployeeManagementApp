@model ForgetPasswordViewModel;
@{
    ViewData["Title"] = "Email Address of registed user for to Generate passwordreset link";
}
<div class="container mt-3">
     <div class="form-group row mb-1">
            <h2 class="text-primary">Forget Password</h2>
    </div>
    <hr>
    <form method="post" asp-action="ForgetPassword" asp-controller="Account">
        <div class="form-group row">
                 <div  asp-validation-summary="All" class="text-danger"></div>
        </div>
         <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                    <input asp-for="Email" class="form-control" placeholder="Please Enter Email">
                    <span asp-validation-for="Email" class="text-danger"></span>
            </div>
         </div>
         <div class="form-group row mt-3">
             <div class="col-sm-10">
                    <button type="submit" class="btn btn-secondary w-auto">Generate Password Reset Link - Submit</button>
             </div>
         </div>
    </form>
</div>