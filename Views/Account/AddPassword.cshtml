@model AddPasswordViewModel
@{
    ViewData["Title"] = "Adding Password to user account linked with external login";
}
<div class="container mt-3">
    <h2>Add Password</h2>
    <hr>
    <p class="text-info">
        You have used an external account to login and do not have a local username and
        password. Simply set a new password if you want to login using a local account.
        <span class="alert-link text-dark"> Use your email as the username. </span> 
    </p>
    <div class="alert alert-info">
        <form method="post" asp-action="AddPassword" asp-controller="Account">
            <div class="form-group row mt-1">
                <div asp-validation-summary="All" class="text-danger"></div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="NewPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="NewPassword" class="form-control" placeholder="Please Enter New Password">
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
                <div class="col-sm-10">
                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Please Confirm New Password">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row mt-3">
                <div class="col-sm-10">
                    <button type="submit" class="btn btn-success w-auto">Set Password</button>
                </div>
            </div>
        </form>
    </div>
</div>