@model List<UserRolesViewModel>;
@{
    ViewData["Title"] = "EditingRolesInUser : AspNetUserRoles table";
}

<div class="container mt-3">
    <form method="post" asp-action="ManageUserRoles" asp-controller="Administration" asp-route-userId="@ViewBag.UserId">
        <div class="card">
            <div class="card-header">
                <h3>Manage Roles of User  : @ViewBag.UserName</h3>
            </div>
       
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                @* display all list of role and checkbox for select role *@
                @for(int i=0;i<Model.Count;i++)
                {

                    <div class="form-check m-1">

                        @* this to hide two fileds of input *@
                        <input type="hidden" asp-for="@Model[i].RoleId"/>
                        <input type="hidden" asp-for="@Model[i].RoleName"/>

                        @* checkbox and lable rolename has to display *@
                        <input asp-for="@Model[i].IsSelected" class="form-check-input" />
                        <label class="form-check-label" asp-for="@Model[i].IsSelected">@Model[i].RoleName</label>

                    </div>
                }
            </div>
       

            <div class="card-footer">
                    <button type="submit" class="btn btn-secondary w-auto">Update</button>
                    @* if user click cancel redirect to edituser view *@
                   <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@ViewBag.UserId" class="btn btn-danger" style="width:auto">Cancel</a>
            </div>
       
       
        </div>
    </form>
</div>