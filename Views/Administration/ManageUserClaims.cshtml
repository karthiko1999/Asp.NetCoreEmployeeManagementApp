@model UserClaimsViewModel;
@{
    ViewData["Title"] = "EditingClaimsInUser : AspNetUserClaims table";
}

<div class="container mt-3">

    <form method="post" asp-action="ManageUserClaims" asp-controller="Administration" asp-route-userId="@Model.UserId">
        <div class="card">

            <div class="card-header">
                <h3>Manage User Claims</h3>
            </div>
            <div class="card-body">

                @for (int i = 0; i <Model.Claims.Count; i++)
                {
                    <div class="form-check m-1">
                        <input type="hidden" asp-for="@Model.UserId" />
                        <input type="hidden" asp-for="@Model.Claims[i].ClaimType" />
                        @* this is for checkbox *@
                        <input asp-for="@Model.Claims[i].IsSelected" class="form-check-input"/>
                        <label class="form-check-label" asp-for="@Model.Claims[i].IsSelected">
                            @Model.Claims[i].ClaimType
                        </label>
                    </div>

                }

            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-secondary w-auto">Update</button>
                @* if user click cancel redirect to edituser view *@
                <a asp-action="EditUser" asp-controller="Administration" asp-route-id="@Model.UserId"
                    class="btn btn-danger" style="width:auto">Cancel</a>
            </div>
        </div>


    </form>


</div>